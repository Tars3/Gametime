<h1>GAMETIME!</h1>
<h2>Register User</h2>

<%= form_for @user do |f| %>
    <% flash.each do |key, msg| %>
        <div><%= msg %></div>
    <% end %>
    <div>
       <%= f.label :email %>
        <%= f.email_field :email %>
    </div>

    <div>
        <%= f.label :gamertag %>
        <%= f.text_field :gamertag %>
    </div>

    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit  "Register" %>
<% end %>
