<h1>Edit this Playtime!</h1>

<%= form_for @playtime do |f| %>

     <div>
        <%= f.label :game %>
        <%= f.collection_select :game_id, Game.order(:title), :id, :title %>
    </div>

    <div>
        <%= f.label :time %>
        <%= f.datetime_local_field :time %>
    </div>

    <div>
        <%= f.label :number_of_players %>
        <%= f.text_field :num_of_players %>
    </div>

    <%= f.submit "Submit these changes!", class: "btn btn-info" %>

<% end %>

<%= link_to "Back to the list!", playtimes_path, class: "btn btn-default" %>


